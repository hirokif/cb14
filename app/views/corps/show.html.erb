  <thead>
    <tr>
      <th>業種名</th>
      <th>許可（登録）番号</th>
      <th>許可年月日</th>
      <th>平均実績高（千円）</th>
    </tr>
  </thead>
  <tbody>
    <% @corp.cdcs.order(:toi_no).each do |cdc| %>
    <tr>
      <td><%= cdc.toi.toi_name %></td>
      <td><%= cdc.lno %></td>
      <td><%= cdc.dgl %></td>
      <td><%= cdc.amv %></td>
      <td>
        <%= link_to '[Edit]', edit_corp_cdc_path(cdc.corp_no, cdc.id) %>
        <%= link_to '[Delete]', corp_cdc_path(cdc.corp_no, cdc.id), method: :delete,
        data: {confirm: "Are you sure?" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
</br>

