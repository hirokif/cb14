<%= form_for [@corp, @cdk] do |f| %>
<p>
    業種名<br>
        <% #業種（toi）リストボックスに変更 %>
    <%= f.collection_select :toi_no, @tois, :toi_no, :toi_name %><br>
    <%#= f.text_field :toi_no %><br><br>
    <%= f.label :pp, 'P点（総合評定値）' %><br />
    <%= f.text_field :pp %><br><br>
    <%= f.label :mr, '平均完成工事高（千円）' %><br />
    <%= f.text_field :mr %><br><br>
    <%= f.label :fr, '１級' %><br />
    <%= f.text_field :egr_fr %><br><br>
    <%= f.label :egr_bb, '基幹' %><br />
    <%= f.text_field :egr_bb %><br><br>
    <%= f.label :egr_sr, '２級' %><br />
    <%= f.text_field :egr_sr %><br><br>
    <%= f.label :egr_or, 'その他' %><br />
    <%= f.text_field :egr_or %><br><br>
    <% if @cdk.errors.any? %>
    <%= @cdk.errors.messages[:pp][0] %>
    <% end %>
</p>

<p>
    <%= f.submit %>
</p>

<% end %>