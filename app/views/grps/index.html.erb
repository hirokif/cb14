<h1>分類一覧</h1>

<ul>
  <% @grp.each do |grp| %>
    <li>
  	  <%= link_to grp.grp_name, grp_path(grp.grp_no)%>
  	  <%= link_to "[Edit]", edit_grp_path(grp.grp_no) %>
  	  <%= link_to "[Delete]", grp_path(grp.grp_no), method: :delete,
  		  data: {confirm: "Are you sure?" } %>
    </li>
  <% end %>
  <li>
    <%= form_for (Grp.new) do |f| %>
	    <%= f.text_field :grp_name %>
	    <%= f.submit %>
	  <% end %>
  </li>
</ul>
